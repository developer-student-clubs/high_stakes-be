version: '3'
services:
  # Database image
  db:
    image: mariadb:latest
    volumes: 
      - ./db_data:/var/lib/mysql:rw
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: high_stakes

  # Database Client for GUI
  adminer:
    image: adminer
    ports:
      - 8080:8080
    links:
      - db

  # Node app using Dockerfile
  app:
    container_name: 'api'
    build: .
    volumes:
      - ./src/:/app/
    links:
      - db

  # nginx to expose on port 80
  nginx:
    image: nginx
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
    ports:
      - 3000:80
    links:
      - app
